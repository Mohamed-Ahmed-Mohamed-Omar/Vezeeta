@model Vezeeta.Models.Patients.GetAllPatients

@{
    ViewBag.Title = "Delete Patient";
}

<h1>Delete Patient</h1>
<hr />

<form asp-controller="Patient" asp-action="Delete" class="form-group">
<div>
    <h3>Are you sure you want to delete this patient?</h3>
    <div>
        <h4>Patient Details</h4>
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.Name</dd>
            <dt class="col-sm-2">Phone</dt>
            <dd class="col-sm-10">@Model.phone</dd>
            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@Model.Email</dd>
            <dt class="col-sm-2">Gender</dt>
            <dd class="col-sm-10">@Model.Gender</dd>
            <dt class="col-sm-2">Date</dt>
            <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>
            <dt class="col-sm-2">Area</dt>
            <dd class="col-sm-10">@Model.Area</dd>
        </dl>
    </div>

        <center>
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-controller="Patient" asp-action="Index" class="btn btn-info">Back To List</a>
        </center>
</div>
</form>

